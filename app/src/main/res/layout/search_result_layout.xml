<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <com.ct.fitorto.custom.CustomTextViewBold
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:letterSpacing="0.05"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/textView10"
            android:layout_toStartOf="@+id/textView10" />

        <com.ct.fitorto.custom.CustomTextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=""
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/title"
            android:letterSpacing="0.05"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/star" />

        <com.ct.fitorto.custom.CustomTextViewBold
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton"
            android:letterSpacing="0.05"
            android:text=""
            android:textColor="@color/colorText"
            android:textStyle="bold" />

        <com.ct.fitorto.custom.CustomTextViewBold
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imageButton"
            android:layout_alignRight="@+id/imageButton"
            android:layout_below="@+id/imageButton"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:letterSpacing="0.05"
            android:text=""
            android:textColor="@color/colorText"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/imgContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flow"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_toLeftOf="@+id/bookbtn"
            android:layout_toStartOf="@+id/bookbtn"
            android:orientation="horizontal">

        </LinearLayout>


        <com.ct.fitorto.flowlayout.FlowLayout
            android:id="@+id/flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imgContainer"
            android:layout_alignRight="@+id/imgContainer"
            android:layout_below="@+id/location"
            android:gravity="start|top" />

        <Button
            android:id="@+id/bookbtn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imgContainer"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@drawable/book_from_result_activity"
            android:elevation="0dp"
            android:gravity="end|center"
            android:padding="12dp"
            android:stateListAnimator="@null"
            android:text="Book"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3px"
        android:layout_below="@+id/container"
        android:background="#dbdbdb" />

</android.support.v7.widget.CardView>
