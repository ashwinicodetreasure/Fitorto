<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="155dp"
        android:layout_height="185dp"
        android:background="@drawable/card_border">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/gym_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:civ_border_color="@color/image_border"
            app:civ_border_width="1dp" />

        <com.ct.fitorto.custom.CustomTextViewBold
            android:id="@+id/gym_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gym_image"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:fontFamily="Roboto Meduim"
            android:text=""
            android:textAllCaps="true"
            android:singleLine="true"
            android:letterSpacing="0.1"
            android:textColor="@color/title_color"
            android:textSize="@dimen/text_size_small" />

        <com.ct.fitorto.custom.CustomTextView
            android:id="@+id/gym_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gym_name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/demo"
            android:letterSpacing="0.1"
            android:textSize="@dimen/text_size_mini" />

        <com.ct.fitorto.custom.CustomTextViewBold
            android:id="@+id/checkedin"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/gym_status"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/checkinbtn"
            android:fontFamily="Roboto Regualar"
            android:gravity="center"
            android:text="CHECKIN"
            android:textColor="#42bf42"
            android:letterSpacing="0.1"
            android:textSize="@dimen/text_size_small" />

    </RelativeLayout>
</RelativeLayout>