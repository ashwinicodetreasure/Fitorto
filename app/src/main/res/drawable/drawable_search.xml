<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners android:radius="2dp" />

            <solid android:color="#ccc" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="0.5dp">
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners android:radius="2dp" />

            <solid android:color="@android:color/white" />

            <padding
                android:bottom="0dp"
                android:left="3dp"
                android:right="3dp"
                android:top="0dp" />
        </shape>
    </item>

</layer-list>