<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#878787" />
                    <corners android:radius="60dp" />
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="3px">
                <shape>
                    <padding android:bottom="5dp" />
                    <gradient android:angle="270" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />
                    <corners android:radius="60dp" />
                    <stroke android:width="1px" android:color="#878787" />

                </shape>
                <stroke android:width="2px" android:color="#878787" />
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#878787" />
                    <corners android:radius="60dp" />
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="1px">
                <shape>
                    <padding android:bottom="3dp" />
                    <gradient android:angle="270" android:endColor="#878787" android:startColor="#878787" />
                    <corners android:radius="60dp" />

                </shape>
                <stroke android:width="1px" android:color="#878787" />
            </item>
        </layer-list>
    </item>
</selector>


